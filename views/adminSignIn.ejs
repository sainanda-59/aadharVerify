    <link rel="stylesheet" href="/css/signIn.css">
    
    <title>Admin Sign In</title>
</head>
<body>
    <div class="container">
        <p class="heading">Admin Sign In</p>
        <form action="/admin/signIn" method="POST">
        <div class="box">
            <p>Username</p>
            <div>
                <input type="text" name="username" id="" placeholder="admin" required>
            </div>
        </div>
 
        <div class="box">
 
           <p>Password</p>
           <div>
                <input type="password" name="password" id="" placeholder="admin123" required>
            </div>
        </div>
 
        <button class="loginBtn">Login</button>
    </form>
     </div>
</body>
</html>